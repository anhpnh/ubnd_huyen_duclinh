    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        .container {
            display: inline-block;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            margin: auto;
            background-image: linear-gradient(#f3eebb00, #6acbf2de);
            width: 100%;
            height: 100%;
            text-align: center;
        }

        #customers {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100% !important;
            height: 100% !important;
        }

        #customers td {
            font-size: 60px;
            font-weight: bold;
            text-align: center;
            border: 1px solid #fff;
        }

        #customers th {
            border: 1px solid #fff;
            padding: 8px;
        }

        #customers tr {
            background-color: transparent;
            border: 1px solid #ddd;
            color: rgb(187, 8, 8);
            text-shadow: 2px 2px 2px #a9acac;

        }

        #customers th {
            height: 30px;
            width: fit-content;
            font-size: 30px;
            font-weight: bold;
            text-align: center;
            background-color: #0094CE;
            color: rgb(0, 0, 0);
            text-shadow: 2px 2px 2px #a9acac;
        }

        #quangcao {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100% !important;
            height: 100% !important;
        }

        #quangcao td {
            font-size: 100px;
            font-weight: bold;
            text-align: center;

        }

        #quangcao tr {
            background-color: transparent;
            color: rgb(187, 8, 8);
        }

        #quangcao tr:hover {
            background-color: transparent;
        }

        .header {
            display: flex;
            align-items: center;
            flex-direction: row;
            color: #D71921;
            font-size: 35px;
            font-weight: bold;
            text-align: center;
            text-shadow: 2px 2px 2px #a9acac;
            justify-content: center;
            width: 100%;
            height: 80px;
            padding: 10px;
            background-image: linear-gradient(#0b92ca, #7cdaff00);
        }

        .sott {
            font-family: Tahoma;
            font-weight: bold;
            color: #d80404;
            text-shadow: 5px 5px 5px #676868;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="header">
