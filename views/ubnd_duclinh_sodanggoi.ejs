                <table id="quangcao">

                    <tr>
                        <td style="text-align: center; justify-content: center;"><iframe width="99%" height="98%"
                                src="https://www.youtube.com/embed/73_Ivq4JH_c?&Version=3&autoplay=1&showinfo=0&loop=1&playlist=73_Ivq4JH_c"
                                frameborder="0"
                                allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"></iframe>

                    </tr>


                </table>
            </div>

            <div style="width: 30%; height: 100%; padding-right: 40px;">
                <table id="customers">
                    <tr>
